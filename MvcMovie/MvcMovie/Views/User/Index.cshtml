@model MvcMovie.Models.UserViewModel
@{
    Layout = "/Views/Shared/App/_Layout.cshtml";
    ViewData["Title"] = "Index";
}

<div>
    <div class="d-flex align-items-center" style="gap: 15px">
        <img src="~/startbootstrap-sb-admin-2-gh-pages/img/undraw_profile.svg" class="img-profile rounded-circle"
             style="height: 5rem; width: 5rem;" />
        <div class="d-flex align-items-center" style="gap:10px">
            <h1>@Model.Username</h1>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-light btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-pen"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>
</div>
